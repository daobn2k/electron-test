{
  "name": "basic-electron-app",
  "version": "1.0.0",
  "description": "A basic Electron + React + Vite + TypeScript app",
  "author": "Your Name",
  "private": true,
  "type": "module",
  "main": "dist-electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:electron": "tsc -p electron/tsconfig.json --watch",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:electron\" \"wait-on http://localhost:3000 && electron ./dist-electron/main.cjs\"",
    "build": "vite build && npm run build:electron && electron-builder",
    "build:electron": "tsc -p electron/tsconfig.json && mv dist-electron/main.js dist-electron/main.cjs",
    "start:electron": "electron ./dist-electron/main.cjs"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^5.1.0",
    "axios": "^1.13.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "concurrently": "^7.6.0",
    "electron": "^25.0.0",
    "electron-builder": "^26.0.12",
    "typescript": "^5.6.0",
    "vite": "^5.0.0",
    "wait-on": "^7.0.0"
  },
  "build": {
    "appId": "com.mycompany.myapp",
    "productName": "MyElectronApp",
    "directories": {
      "output": "release"
    },
    "files": [
      {
        "from": "dist",
        "to": "dist"
      },
      {
        "from": "dist-electron",
        "to": "dist-electron"
      },
      "package.json"
    ],
    "mac": {
      "target": ["dmg"],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": ["nsis"]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
